{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>Boshen/renovate"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "npm packages",
      "matchManagers": ["npm"],
      "rangeStrategy": "auto",
      "schedule": ["before 10am"]
    },
    {
      "groupName": "rolldown",
      "matchManagers": ["npm"],
      "rangeStrategy": "update-lockfile",
      "schedule": ["at any time"]
    }
  ]
}
